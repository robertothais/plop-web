@import 'bootstrap/less-compat'
@import 'bootstrap/variables'
@import 'bootstrap/mixins'

$navbarBackground = #DB0300
$navbarBackgroundHighlight = #FF0400

$errorText       = #DB0300
$errorBorder     = #DB0300
$linkColor       = #3ab4d7

@import 'bootstrap/reset'
@import 'bootstrap/utilities'
@import 'bootstrap/component-animations'
@import 'bootstrap/close'
@import 'bootstrap/layouts'
@import 'bootstrap/scaffolding'
@import 'bootstrap/grid'
@import 'bootstrap/navs'
@import 'bootstrap/modals'
@import 'bootstrap/forms'
@import 'bootstrap/buttons'
@import 'bootstrap/wells'
@import 'bootstrap/progress-bars'
@import 'bootstrap/navbar'
@import 'bootstrap/dropdowns'
@import 'bootstrap/tooltip'
@import 'bootstrap/popovers'
@import 'bootstrap/type'

html, body
  height 100%  

body
  background-color #F2F3F4
  
.wrapper
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -69px

  .push 
    height 69px

.wrapper > .container
  padding-top 70px

footer
  height 51px
  display none
  margin-top 18px
  gradient-vertical($navbarBackground, #B50000)
  $shadow = 0 -1px 3px rgba(0,0,0,.25), inset 0 1px 0 rgba(0,0,0,.1)
  box-shadow($shadow)

  .container
    .span9
      text-align center
      padding-top 13px
      padding-bottom 13px
      line-height 25px
      height 25px

.clearfix
  clearfix()

a:hover
  text-decoration none

a:focus
  outline 0

.module
  box-sizing(border-box)
  background-color $white
  border-radius(5px)
  box-shadow(2px)
  padding 12px
  border 1px solid rgba(0, 0, 0, 0.1)

.span9
  .nav-tabs
    margin-bottom 0
    border-bottom 0
    font-weight bold
    font-size 14px

  .module
    border-radius(0 5px 5px 5px)
    padding-left 0
    padding-right 0

body.no-more-posts
  footer
    display block

body.showing-post
  .span9
    .module
      border-radius(5px)
      padding-top 0
  #tabs
    display none

  footer
    display block

.post
  .span9
    box-sizing(border-box)
    padding-right 16px
    padding-left 16px
    width 788px

  .info
    .span9
      gradient-vertical(#F2F3F4, #ededed)
      box-shadow(inset 0px 1px 1px white)
      border-bottom 1px solid rgba(0, 0, 0, 0.08)
      border-top 1px solid rgba(0, 0, 0, 0.04)
      height 43px

      .votes
        float right
        line-height 41px
        font-size 26px
        color #999
        text-shadow 0 1px 0 $white


      .social
        clearfix()
        padding-top 11px        
        float left

      .fb-like
        float left
        margin-right 8px

      .btn.twitter, .btn.facebook
        float left
        margin-right 16px
        height 20px
        padding 0
        padding-left 8px
        padding-right 8px

      .btn.twitter
        img
          margin-top -3px

      .btn.facebook
        img
          width 14px
          height 14px
          margin-top -2px

      .g-plusone
        float left

    .span7
      box-sizing(border-box)
      padding 16px 0 16px 16px
      width 692px  

      h1
        font-size 20px  
        float left
        height 36px
        text-overflow ellipsis
        white-space nowrap
        width 676px
        overflow hidden

    .span2
      box-sizing(border-box)
      width 76px
      padding 16px 16px 16px 0

  .username
    font-weight bold

  .timeago
    color $grayLight
    margin-left 4px

  .btn.plop
    float right
    height 60px
    padding-top 14px
    padding-bottom 14px

  .span9.main
    text-align center
    margin-top 16px

    .image
      border-radius(5px)      

  .span9.comments
    margin-top 16px
    min-height 40px

.preview
  border-bottom 1px solid rgba(0, 0, 0, 0.08)
  padding-bottom 20px
  margin-bottom 12px

  img.image
    border-radius(5px)
    width 504px
    max-height 6000px

  .span6
    box-sizing(border-box)
    padding-left 16px
    min-height 1px
    
  .span3
    box-sizing(border-box)
    width 252px
    padding-right 16px
    margin-left 16px
    word-wrap break-word

  .username
    font-weight bold

  .timeago
    color $grayLight
    margin-left 4px

  .creator
    margin-top 15px   

  .btn.plop
    float left
    height 60px
    padding-top 14px
    padding-bottom 14px

  .btn.share
    width 48%  
    margin-top 15px
    float:left


  .votes
    font-size 32px
    line-height 60px
    float right
    margin-left 20px
    color $grayLight

  .btn.twitter
    float right
    
    img
      width 19px
      height 19px
      margin-top -3px

  h3
    margin-bottom 9px
    line-height 22px

  &:last-child
    border-bottom none

h3 a
  color inherit
  &:hover
    text-decoration none
    color inherit


.navbar .brand 
  position relative
  top 2px
  padding-bottom 8px
  height 35px
  width 103px

 .navbar .divider-vertical
    height 51px

.navbar .nav > li > a
  font-weight bold
  color #fff
  line-height 30px

.navbar .user .caret
  color #fff
  margin-top 14px
  margin-left 4px
  opacity(100)

.navbar .new-upload
  img
    position relative
    top 2px
    margin-right 8px

.navbar li.user
  display none

  span.karma
    font-weight normal
    margin-left 4px
    margin-right 4px

.btn-primary
  buttonBackground(#ee5f5b, #e02826)

#loader 
  position absolute
  background-color #EDEEEE
  background-position center center
  background-repeat no-repeat
  left 0
  top 47px
  bottom 0
  right 0
  overflow hidden

#upload.modal
  width 650px
  margin-left -325px
  .span4
    overflow hidden
  .modal-header
    .close
      margin-top 6px
  .form-horizontal .controls
    margin-left 70px
  .form-horizontal .control-label
    width 60px
  label.checkbox.rules
    padding-top 0
  form, .control-group:last-child
    margin-bottom 0

  .bar span
    display none

  .control-group.error 
    input
      color $gray
    label
      color $grayDark
    .help-block .error-message
      font-style italic
      display block
    .help-block .prompt
      color $grayLight 
  .control-group
    .error-message
      display none
  .progress
    display none

.btn.share
  box-sizing(border-box)  
  
  span 
    font-weight bold
    font-size 12px

  img
    width 16px
    height 16px
    vertical-align middle
    margin-right 5px


.btn.facebook
  buttonBackground(#5178C1, #35589C) 

  span
    text-shadow 0 1px 0 #34579B
    color #fff

.btn.twitter  
  span
    text-shadow 0 1px 0 $white
    color $grayDark  

#login
  width 480px

  .span5
    text-align center

    p
      display none
      color $grayLight
      font-weight bold
      font-size 18px
      margin 0

    .spin
      width 45px
      height 45px
      margin auto
      margin-top 10px
      display none

  .modal-body
    padding 25px 25px 15px 25px

  .btn.facebook
    font-size 22px  
    font-weight bold
    line-height 45px
    margin-left -10px
    margin-bottom 10px

    img
      width 20px
      height 20px      
      position relative
      top 2px
      margin-right 10px

#back-to-top 
  transition(bottom 250ms ease-in-out 0s)
  background-color #FFF
  border 1px solid #BBBBBB
  border-radius(5px 5px 0 0)
  bottom -10px
  color #222222
  cursor pointer
  display block
  font-size 14px
  padding 15px 10px 25px
  position fixed
  right 15px
  text-align center
  text-shadow 0 1px #FFFFFF
  width 50px
  z-index 9999
  @css { box-shadow: 0 0 0 1px #FFFFFF inset, 0 1px 4px #BBBBBB; }

  &.offscreen
    bottom -100px